{%extends "ATKSAdminBundle::layout_admin_register.html.twig"%}
{% trans_default_domain 'FOSUserBundle' %}
{% block title %} ProxiSant√© | Admin | Login {% endblock title %}
{% block header %}
{% endblock header %}
{% block fos_user_content %}
{% if error %}
<div class="grid fluid">
    <div class="row">
        <div class="span6">
            <div class="notice marker-on-bottom bg-red fg-white">
                <p style="text-align: center">{#{ error|trans({}, 'FOSUserBundle') }#}</p>
                <p style="text-align: center">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
            </div>
        </div>
    </div>
</div>
{% endif %}
<div class="grid fluid">
    <div class="row">
        <div class="span6">
            <h2 id="__form__">Connexion</h2>
            <div class="example2">
                <form action="{{ path("atks_admin_login_check") }}" method="post" class="utopia">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    <label for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
                    <div class="input-control text" data-role="input-control">
                        <input type="text" id="username" name="_username" required="required" class="span12 validate[required]"/>
                        <button class="btn-clear" tabindex="-1" type="button"></button>
                    </div>

                    <label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
                    <div class="input-control password" data-role="input-control">
                        <input type="password" id="password" name="_password" required="required" class="span12  validate[required]"/>
                        <button class="btn-reveal" tabindex="-1" type="button"></button>
                    </div>
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" style="display: inline">
                    <label for="remember_me" style="display: inline">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
                    <div style="margin-top: 10px">
                        <button type="submit" id="_submit" name="_submit" class="button bg-green fg-white large">
                            <i class="icon-user-2 on-left"></i>
                                    {{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}
                        </button>
                    </div>
                </form>
            </div>
        </div>
            <div class="span6">
                <img src="{{asset('bundles/atksadmin/images/caducee-pharmacie.jpg')}}" style="margin-top: 40px"/>
            </div>
    </div>
</div>
{% endblock fos_user_content %}
{% block footer %}
{% endblock footer%}
